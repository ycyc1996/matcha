{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "baseUrl": "./src",
    "jsx": "react",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "lib": [
      "es2017",
      "esnext.asynciterable",
      "dom"
    ]
  },
  "include": ["src/**/*", "src/node_modules/**/*"]
}
